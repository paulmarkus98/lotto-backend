    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "lib": ["ESNext"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
